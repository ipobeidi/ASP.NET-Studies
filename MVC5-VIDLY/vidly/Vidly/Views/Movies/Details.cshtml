@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li> Genre @Model.Genres.Name</li>
    <li>Release Date: @Model.ReleasedDate.ToLongDateString()</li>
    <li>Data Added: @Model.AddData.ToLongDateString()</li>
    <li>Number in Stock:@Model.Quantity</li>

</ul>
